<div class="card-body">


    {{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
    {{else}}

    {{/each}}
<h4>Editar atlética</h4>

    <div class="card">
        
        <div class="card-body">
            

            <form action="/admin/editar/atletica" method="POST">
                <input type="hidden" value="{{atletica._id}}" name="id">
                <label for="titulo">Título: </label>
                <input type="text" name="title" class="form-control" value="{{atletica.title}}" required="true">
                <label for="descricao">Descrição</label>
                <input type="text" name="description" class="form-control" value="{{atletica.description}}"
                    required="true">
                <label for="slug">Slug: </label>
                <input type="text" name="slug" class="form-control" value="{{atletica.slug}}" required="true">


                <button class="btn btn-success mt-4" type="submit">Editar atlética</button>
            </form>
        </div>
    </div>

</div>